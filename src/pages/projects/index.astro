<script is:inline type='module' data-astro-rerun>
  import { siteConfig } from '/src/site.config.ts'

  const loadPageviewCount = async () => {
    const pageviewCount = await import(`${siteConfig.npmCDN}/@waline/client@v3/dist/pageview.js`)
    pageviewCount({
      serverURL: siteConfig.commonPage.walineServerUrl,
      path: window.location.pathname
    })
  }

  loadPageviewCount()
</script>
